<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <fr.tvbarthel.games.chasewhisply.ui.GameModeView
                android:id="@+id/mode1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/half_padding"
                android:layout_weight="1" />

            <fr.tvbarthel.games.chasewhisply.ui.GameModeView
                android:id="@+id/mode2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/half_padding"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:gravity="center"
            android:orientation="horizontal">

            <fr.tvbarthel.games.chasewhisply.ui.GameModeView
                android:id="@+id/mode3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/half_padding"
                android:layout_weight="1" />

            <fr.tvbarthel.games.chasewhisply.ui.GameModeView
                android:id="@+id/mode4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/half_padding"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/level_chooser"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_view_grey" />

    </RelativeLayout>

</ScrollView>